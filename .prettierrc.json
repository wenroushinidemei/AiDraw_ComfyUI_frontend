{
  "$schema": "https://json.schemastore.org/prettierrc",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "printWidth": 80,
  "trailingComma": "none",
  "importOrder": [
    "^@core/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": "*.{js,cjs,mjs,ts,cts,mts,tsx,vue}",
      "options": {
        "plugins": [
          "@trivago/prettier-plugin-sort-imports"
        ]
      }
    }
  ],
  "ignorePath": ".prettierignore"
}